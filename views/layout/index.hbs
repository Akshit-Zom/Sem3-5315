<!-- index.hbs -->

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Restaurant Search</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1>Restaurant Search</h1>
    {{#if restaurants}}
      <ul>
        {{#each restaurants}}
          <li>{{this.name}} - {{this.borough}}</li>
        {{/each}}
      </ul>
    {{else}}
      <p>No restaurants found.</p>
    {{/if}}
    <form action="/api/restaurants" method="GET">
      <label for="page">Page:</label>
      <input type="number" id="page" name="page" value="1" required />
      <label for="perPage">Per Page:</label>
      <input type="number" id="perPage" name="perPage" value="5" required />
      <label for="borough">Borough:</label>
      <input
        type="text"
        id="borough"
        name="borough"
        placeholder="Enter borough"
      />
      <button type="submit">Search</button>
    </form>
  </body>
</html>